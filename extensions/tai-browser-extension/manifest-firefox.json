{
  "manifest_version": 2,
  "name": "Tai Activity Tracker",
  "version": "1.0.0",
  "description": "Track browser activity for Tai-AI personal habit data collection",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "webNavigation",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tai-extension@example.com",
      "strict_min_version": "78.0"
    }
  }
}
