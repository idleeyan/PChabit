<Page
    x:Class="PChabit.App.Views.InsightsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vo="using:PChabit.Core.ValueObjects"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12" Margin="0,0,0,16">
            <Button Command="{x:Bind ViewModel.PreviousDayCommand}" Content="&#xE76B;" FontFamily="Segoe MDL2 Assets" Width="32" Height="32"/>
            <TextBlock Text="{x:Bind ViewModel.SelectedDate, Mode=OneWay}" 
                       VerticalAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}"/>
            <Button Command="{x:Bind ViewModel.NextDayCommand}" Content="&#xE76C;" FontFamily="Segoe MDL2 Assets" Width="32" Height="32"/>
            <Button Command="{x:Bind ViewModel.RefreshCommand}" Content="&#xE72C;" FontFamily="Segoe MDL2 Assets" Width="32" Height="32" Margin="12,0,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" Padding="16" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="效率评分" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="{x:Bind ViewModel.TodayScoreLabel, Mode=OneWay}" 
                               FontSize="32" FontWeight="Bold" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" Padding="16" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="专注得分" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="{Binding ViewModel.ScoreBreakdown.FocusScore, Mode=OneWay, FallbackValue=0}" 
                               FontSize="24" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" Padding="16" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="任务完成" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="{Binding ViewModel.ScoreBreakdown.TaskCompletionScore, Mode=OneWay, FallbackValue=0}" 
                               FontSize="24" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="3" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" Padding="16" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="平衡得分" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="{Binding ViewModel.ScoreBreakdown.BalanceScore, Mode=OneWay, FallbackValue=0}" 
                               FontSize="24" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="4" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" Padding="16">
                <StackPanel>
                    <TextBlock Text="中断控制" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="{Binding ViewModel.ScoreBreakdown.InterruptionScore, Mode=OneWay, FallbackValue=0}" 
                               FontSize="24" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" Padding="16" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="今日洞察" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,12"/>
                    
                    <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.Insights, Mode=OneWay}" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="vo:PatternInsight">
                                <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" 
                                        CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="{x:Bind Title}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{x:Bind Description}" 
                                                   TextWrapping="Wrap" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="8" Padding="16">
                <ScrollViewer>
                    <TextBlock Text="{x:Bind ViewModel.WeeklyReport, Mode=OneWay}" TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>
        </Grid>

        <ProgressRing Grid.RowSpan="3" IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" 
                      Width="48" Height="48" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
