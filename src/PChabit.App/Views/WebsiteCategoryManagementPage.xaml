<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="PChabit.App.Views.WebsiteCategoryManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Column="0"
            Padding="16"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Spacing="8">
                    <TextBlock
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="网站分类" />

                    <TextBlock
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="管理网站分类和域名映射" />
                </StackPanel>

                <Button
                    Grid.Row="1"
                    Margin="0,16,0,0"
                    HorizontalAlignment="Stretch"
                    Content="添加分类"
                    Style="{StaticResource AccentButtonStyle}"
                    Click="OnAddCategoryClick" />

                <ListView
                    Grid.Row="2"
                    Margin="0,16,0,0"
                    ItemsSource="{x:Bind ViewModel.Categories, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectedCategory, Mode=TwoWay}"
                    SelectionMode="Single"
                    SelectionChanged="OnCategorySelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Border
                                    Grid.Column="0"
                                    Width="32"
                                    Height="32"
                                    Margin="0,0,12,0"
                                    Background="{Binding Color, Converter={StaticResource StringToBrushConverter}}"
                                    CornerRadius="6">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Text="{Binding Icon}" />
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock FontWeight="Medium" Text="{Binding Name}" />
                                    <TextBlock
                                        FontSize="11"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="{Binding Description}"
                                        TextTrimming="CharacterEllipsis"
                                        Visibility="{Binding Description, Converter={StaticResource StringToVisibilityConverter}}" />
                                </StackPanel>

                                <TextBlock
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    FontSize="11"
                                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                    Text="{Binding IsSystem, Converter={StaticResource SystemCategoryConverter}}" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <StackPanel Grid.Row="3" Spacing="8">
                    <TextBlock
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                        <Run Text="共" />
                        <Run Text="{x:Bind ViewModel.TotalCategories, Mode=OneWay}" />
                        <Run Text="个分类" />
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <Border
            Grid.Column="1"
            Margin="16,0,0,0"
            Padding="16"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <StackPanel Spacing="4">
                        <TextBlock
                            FontSize="20"
                            FontWeight="SemiBold"
                            Text="{x:Bind ViewModel.SelectedCategory.Name, Mode=OneWay, FallbackValue='选择分类查看映射'}" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="{x:Bind ViewModel.SelectedCategory.Description, Mode=OneWay, FallbackValue=''}" />
                    </StackPanel>

                    <StackPanel
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Spacing="8"
                        Visibility="{x:Bind ViewModel.IsCategorySelected, Mode=OneWay}">
                        <Button
                            Content="编辑分类"
                            Style="{StaticResource AccentButtonStyle}"
                            Click="OnEditCategoryClick" />
                        <Button
                            Content="删除分类"
                            IsEnabled="{x:Bind ViewModel.SelectedCategory.IsSystem, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}"
                            Click="OnDeleteCategoryClick" />
                    </StackPanel>
                </Grid>

                <Grid
                    Grid.Row="1"
                    Margin="0,16,0,0"
                    ColumnSpacing="8"
                    Visibility="{x:Bind ViewModel.IsCategorySelected, Mode=OneWay}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        Grid.Column="0"
                        PlaceholderText="搜索域名..."
                        Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <Button
                        Grid.Column="1"
                        Content="添加域名"
                        Style="{StaticResource AccentButtonStyle}"
                        Click="OnAddMappingClick" />
                </Grid>

                <Grid Grid.Row="2" Margin="0,16,0,0">
                    <ListView
                        ItemsSource="{x:Bind ViewModel.FilteredMappings, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.IsCategorySelected, Mode=OneWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock FontWeight="Medium" Text="{Binding DomainPattern}" />
                                    </StackPanel>

                                    <Button
                                        Grid.Column="1"
                                        Content="删除"
                                        Tag="{Binding Id}"
                                        Click="OnDeleteMappingClick" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="16"
                        Visibility="{x:Bind ViewModel.IsCategorySelected, Mode=OneWay, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <FontIcon
                            FontSize="48"
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                            Glyph="&#xE8FD;" />
                        <TextBlock
                            FontSize="16"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="请从左侧选择一个分类" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
