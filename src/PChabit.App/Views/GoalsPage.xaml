<Page
    x:Class="PChabit.App.Views.GoalsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:entities="using:PChabit.Core.Entities"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock Text="目标管理" Style="{StaticResource TitleTextBlockStyle}"/>
            <Button Click="AddGoalButton_Click"
                    Content="&#xE710;" FontFamily="Segoe MDL2 Assets" 
                    Style="{StaticResource AccentButtonStyle}" Margin="16,0,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <ListView x:Name="GoalsListView" 
                      ItemsSource="{x:Bind ViewModel.Goals, Mode=OneWay}" 
                      SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="entities:UserGoal">
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                                CornerRadius="8" Padding="16" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <FontIcon Grid.Column="0" Glyph="&#xE9D9;" FontSize="24" Margin="0,0,12,0"/>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind TargetId}" FontWeight="SemiBold"/>
                                    <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                        <Run Text="类型: "/>
                                        <Run Text="{x:Bind TargetType}"/>
                                        <Run Text=" | 限制: "/>
                                        <Run Text="{x:Bind DailyLimitMinutes}"/>
                                        <Run Text=" 分钟"/>
                                    </TextBlock>
                                </StackPanel>

                                <ToggleSwitch Grid.Column="2" 
                                              IsOn="{x:Bind IsActive, Mode=TwoWay}"
                                              Toggled="ToggleSwitch_Toggled"/>

                                <Button Grid.Column="3" 
                                        Content="&#xE74D;" 
                                        FontFamily="Segoe MDL2 Assets"
                                        Click="DeleteGoal_Click"
                                        Tag="{x:Bind}"
                                        Style="{StaticResource ButtonRevealStyle}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" 
                          Width="48" Height="48" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <Grid x:Name="AddGoalOverlay"
              Grid.RowSpan="2"
              Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
              Visibility="Collapsed"
              Padding="24">
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="12"
                    Padding="24"
                    MaxWidth="400"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <StackPanel Spacing="16">
                    <TextBlock Text="添加目标" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    
                    <ComboBox x:Name="TargetTypeComboBox"
                              Header="目标类型"
                              SelectedIndex="0"
                              HorizontalAlignment="Stretch">
                        <ComboBoxItem Content="应用程序"/>
                        <ComboBoxItem Content="分类"/>
                        <ComboBoxItem Content="总时长"/>
                    </ComboBox>
                    
                    <TextBox x:Name="TargetIdTextBox"
                             Header="目标标识（应用名或分类名）"
                             PlaceholderText="例如: chrome 或 开发工具"/>
                    
                    <NumberBox x:Name="DailyLimitNumberBox"
                               Header="每日限制（分钟）"
                               Minimum="1"
                               Maximum="1440"
                               Value="60"/>
                    
                    <NumberBox x:Name="DailyTargetNumberBox"
                               Header="每日目标（分钟，可选）"
                               Minimum="1"
                               Maximum="1440"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right">
                        <Button Content="取消" Click="CancelAddGoal_Click"/>
                        <Button Content="添加" 
                                Style="{StaticResource AccentButtonStyle}"
                                Click="ConfirmAddGoal_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
