<?xml version="1.0" encoding="UTF-8" ?>
<UserControl
    x:Class="PChabit.App.Views.MouseDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:PChabit.App.ViewModels"
    mc:Ignorable="d">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="24">
            <!-- 周期选择 -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock 
                    Text="统计周期:" 
                    VerticalAlignment="Center" 
                    Style="{StaticResource BodyTextBlockStyle}" />
                <ComboBox 
                    ItemsSource="{x:Bind Periods, Mode=OneWay}"
                    SelectedItem="{x:Bind ViewModel.SelectedPeriod, Mode=TwoWay}"
                    Width="120" />
                <Button 
                    Content="刷新" 
                    Command="{x:Bind ViewModel.LoadDataCommand}"
                    Margin="12,0,0,0" />
            </StackPanel>

            <!-- 统计卡片 -->
            <ItemsControl ItemsSource="{x:Bind ViewModel.StatCards, Mode=OneWay}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="viewModel:MouseStatCard">
                        <Border
                            Width="200"
                            Height="120"
                            Margin="0,0,12,12"
                            Padding="16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <FontIcon
                                    Grid.Row="0"
                                    FontSize="20"
                                    Foreground="{x:Bind Color}"
                                    Glyph="{x:Bind Icon}" />

                                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="28"
                                        FontWeight="Bold"
                                        Foreground="{x:Bind Color}"
                                        Text="{x:Bind Value}" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="{x:Bind Subtitle}" />
                                </StackPanel>

                                <TextBlock
                                    Grid.Row="2"
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                    Text="{x:Bind Title}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- 按程序统计 -->
            <Border
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12">
                <StackPanel Spacing="16">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="按程序统计" />

                    <ListView
                        ItemsSource="{x:Bind ViewModel.ProgramStats, Mode=OneWay}"
                        SelectionMode="None"
                        MaxHeight="300">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="viewModel:ProgramMouseStat">
                                <Grid Padding="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock FontWeight="Medium" Text="{x:Bind ProcessName}" />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="{x:Bind Category}" />
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Spacing="4">
                                        <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                            <Run Text="点击:" />
                                            <Run Text="{x:Bind ClickCount}" />
                                        </TextBlock>
                                        <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                            <Run Text="移动:" />
                                            <Run Text="{x:Bind MoveDistance}" />
                                            <Run Text="px" />
                                        </TextBlock>
                                    </StackPanel>

                                    <TextBlock
                                        Grid.Column="2"
                                        FontSize="12"
                                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                        VerticalAlignment="Center">
                                        <Run Text="时长:" />
                                        <Run Text="{x:Bind Duration.Hours}" />
                                        <Run Text="h" />
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- 每小时统计 -->
            <Border
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12">
                <StackPanel Spacing="16">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="每小时统计" />

                    <ItemsControl ItemsSource="{x:Bind ViewModel.HourlyStats, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="viewModel:HourlyMouseStat">
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        Text="{x:Bind Hour, Converter={StaticResource HourToTimeConverter}}"
                                        VerticalAlignment="Center" />

                                    <ProgressBar
                                        Grid.Column="1"
                                        Margin="8,0"
                                        Maximum="1000"
                                        Value="{x:Bind ClickCount}" />

                                    <TextBlock
                                        Grid.Column="2"
                                        MinWidth="100"
                                        TextAlignment="Right"
                                        VerticalAlignment="Center">
                                        <Run Text="点击:" />
                                        <Run Text="{x:Bind ClickCount}" />
                                        <Run Text=" | 移动:" />
                                        <Run Text="{x:Bind MoveDistance}" />
                                        <Run Text="px" />
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- 详细记录 -->
            <Border
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12">
                <StackPanel Spacing="16">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="详细记录" />

                    <ListView
                        ItemsSource="{x:Bind ViewModel.ClickDetails, Mode=OneWay}"
                        SelectionMode="None"
                        MaxHeight="400">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="viewModel:MouseClickDetail">
                                <Grid Padding="8" ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        VerticalAlignment="Center">
                                        <Run Text="{x:Bind Date, Converter={StaticResource DateToStringConverter}}" />
                                        <Run Text=" " />
                                        <Run Text="{x:Bind Hour}" />
                                        <Run Text=":00" />
                                    </TextBlock>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                        <TextBlock Foreground="#107C10">
                                            <Run Text="左:" />
                                            <Run Text="{x:Bind LeftClicks}" />
                                        </TextBlock>
                                        <TextBlock Foreground="#E81123">
                                            <Run Text="右:" />
                                            <Run Text="{x:Bind RightClicks}" />
                                        </TextBlock>
                                        <TextBlock Foreground="#FF8C00">
                                            <Run Text="中:" />
                                            <Run Text="{x:Bind MiddleClicks}" />
                                        </TextBlock>
                                    </StackPanel>

                                    <TextBlock
                                        Grid.Column="2"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                        <Run Text="移动:" />
                                        <Run Text="{x:Bind MoveDistance}" />
                                        <Run Text="px" />
                                    </TextBlock>

                                    <TextBlock
                                        Grid.Column="3"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                        <Run Text="滚动:" />
                                        <Run Text="{x:Bind Scrolls}" />
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
