<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="PChabit.App.Views.TimelinePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:PChabit.App.ViewModels"
    mc:Ignorable="d">
    
    <ScrollViewer Padding="24">
        <StackPanel Spacing="24">
            <Grid>
                <TextBlock
                    FontSize="24"
                    FontWeight="SemiBold"
                    Text="时间线" />
                
                <StackPanel
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Spacing="8">
                    <Button
                        Padding="12,6"
                        Content="今天"
                        Click="TodayButton_Click" />
                    <Button
                        Padding="12,6"
                        Content="昨天"
                        Click="YesterdayButton_Click" />
                </StackPanel>
            </Grid>
            
            <TextBlock
                FontSize="16"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="{x:Bind ViewModel.SelectedDate, Mode=OneWay, Converter={StaticResource DateToStringConverter}}" />
            
            <ListView
                ItemsSource="{x:Bind ViewModel.HourGroups, Mode=OneWay}"
                ScrollViewer.IsDeferredScrollingEnabled="True"
                SelectionMode="None">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="viewModel:TimelineHourGroup">
                        <Expander
                            Margin="0,0,0,8"
                            Padding="0"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            IsExpanded="{x:Bind IsExpanded, Mode=TwoWay}"
                            Expanding="HourGroup_Expanding">
                            <Expander.Header>
                                <Grid Padding="16,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="{x:Bind TimeRange}" />
                                    
                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="16,0,0,0"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal"
                                        Spacing="12">
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="{x:Bind ActivityCount}" />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                            Text="项活动" />
                                    </StackPanel>
                                    
                                    <TextBlock
                                        Grid.Column="2"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                        Text="{x:Bind TotalDuration}" />
                                </Grid>
                            </Expander.Header>
                            
                            <Expander.Content>
                                <ListView
                                    ItemsSource="{x:Bind Activities}"
                                    ScrollViewer.IsDeferredScrollingEnabled="True"
                                    SelectionMode="None"
                                    IsItemClickEnabled="False">
                                    <ListView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel />
                                        </ItemsPanelTemplate>
                                    </ListView.ItemsPanel>
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="viewModel:TimelineActivity">
                                            <Grid
                                                Margin="8,2"
                                                Padding="12,8"
                                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                                CornerRadius="8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="60" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    Text="{x:Bind Time}" />
                                                
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                                    <Image
                                                        Width="20"
                                                        Height="20"
                                                        Source="{x:Bind Icon, Mode=OneWay}"
                                                        Stretch="UniformToFill" />
                                                    <StackPanel Spacing="2">
                                                        <TextBlock FontWeight="Medium" Text="{x:Bind Title}" />
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                            Text="{x:Bind Subtitle}"
                                                            TextTrimming="CharacterEllipsis"
                                                            MaxLines="1" />
                                                    </StackPanel>
                                                </StackPanel>
                                                
                                                <StackPanel
                                                    Grid.Column="2"
                                                    VerticalAlignment="Center"
                                                    Orientation="Horizontal"
                                                    Spacing="8">
                                                    <Border
                                                        Padding="8,4"
                                                        Background="{x:Bind CategoryColor, Converter={StaticResource StringToBrushConverter}}"
                                                        CornerRadius="4">
                                                        <TextBlock
                                                            FontSize="11"
                                                            Foreground="White"
                                                            Text="{x:Bind Category}" />
                                                    </Border>
                                                    <TextBlock FontWeight="SemiBold" Text="{x:Bind Duration}" />
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Expander.Content>
                        </Expander>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <Border
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Visibility="{x:Bind ViewModel.HasData, Converter={StaticResource InverseBooleanToVisibilityConverter}, Mode=OneWay}">
                <StackPanel HorizontalAlignment="Center" Spacing="8">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="16"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="暂无数据" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                        Text="请确保监控服务正在运行" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
