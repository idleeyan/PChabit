<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="Tai.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Tai.App"
    xmlns:converters="using:Tai.App.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <converters:DateToStringConverter x:Key="DateToStringConverter" />
            <converters:StringToBrushConverter x:Key="StringToBrushConverter" />
            <converters:FirstLetterConverter x:Key="FirstLetterConverter" />
            <converters:HoursToStringConverter x:Key="HoursToStringConverter" />
            <converters:TrendColorConverter x:Key="TrendColorConverter" />
            <converters:InsightBackgroundConverter x:Key="InsightBackgroundConverter" />
            <converters:PercentageConverter x:Key="PercentageConverter" />
            <converters:IntToProgramCountTextConverter x:Key="IntToProgramCountTextConverter" />
            <converters:ColorSelectionConverter x:Key="ColorSelectionConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
            <converters:InverseCountToVisibilityConverter x:Key="InverseCountToVisibilityConverter" />
            <converters:CountToEnabledConverter x:Key="CountToEnabledConverter" />
            <converters:SelectedCountConverter x:Key="SelectedCountConverter" />
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converters:SystemCategoryConverter x:Key="SystemCategoryConverter" />
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            
            <Color x:Key="PrimaryColor">#512BD4</Color>
            <Color x:Key="SecondaryColor">#0078D4</Color>
            <Color x:Key="SuccessColor">#107C10</Color>
            <Color x:Key="WarningColor">#FF8C00</Color>
            <Color x:Key="DangerColor">#D13438</Color>
            
            <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
            <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
            <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
            <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />
            
            <x:Double x:Key="FontSizeSmall">12</x:Double>
            <x:Double x:Key="FontSizeNormal">14</x:Double>
            <x:Double x:Key="FontSizeMedium">16</x:Double>
            <x:Double x:Key="FontSizeLarge">20</x:Double>
            <x:Double x:Key="FontSizeXLarge">24</x:Double>
            
            <CornerRadius x:Key="ControlCornerRadius">8</CornerRadius>
            <CornerRadius x:Key="OverlayCornerRadius">12</CornerRadius>
            
            <Style x:Key="PageTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="{StaticResource FontSizeXLarge}" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Margin" Value="0,0,0,16" />
            </Style>
            
            <Style x:Key="CardStyle" TargetType="Border">
                <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
                <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="CornerRadius" Value="{StaticResource OverlayCornerRadius}" />
                <Setter Property="Padding" Value="16" />
            </Style>
            
            <Style x:Key="StatCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
                <Setter Property="MinWidth" Value="150" />
            </Style>
            
            <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}" />
                <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}" />
            </Style>
            
            <Style x:Key="ValueTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="{StaticResource FontSizeLarge}" />
                <Setter Property="FontWeight" Value="SemiBold" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
