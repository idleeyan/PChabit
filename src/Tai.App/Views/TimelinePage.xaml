<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="Tai.App.Views.TimelinePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:Tai.App.ViewModels"
    mc:Ignorable="d">
    
    <ScrollViewer Padding="24">
        <StackPanel Spacing="24">
            <Grid>
                <TextBlock
                    FontSize="24"
                    FontWeight="SemiBold"
                    Text="时间线" />
                
                <StackPanel
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Spacing="8">
                    <Button
                        Padding="12,6"
                        Content="今天"
                        Click="TodayButton_Click" />
                    <Button
                        Padding="12,6"
                        Content="昨天"
                        Click="YesterdayButton_Click" />
                </StackPanel>
            </Grid>
            
            <TextBlock
                FontSize="16"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="{x:Bind ViewModel.SelectedDate, Mode=OneWay, Converter={StaticResource DateToStringConverter}}" />
            
            <ItemsControl ItemsSource="{x:Bind ViewModel.TimelineGroups, Mode=OneWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="viewModel:TimelineGroup">
                        <Border
                            Margin="0,0,0,16"
                            Padding="16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="12">
                            <StackPanel Spacing="12">
                                <Grid>
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="{x:Bind Period}" />
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        FontSize="12"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="{x:Bind TotalDuration}" />
                                </Grid>
                                
                                <ItemsControl ItemsSource="{x:Bind Activities}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="viewModel:TimelineActivity">
                                            <Grid
                                                Margin="0,4"
                                                Padding="8"
                                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                                CornerRadius="8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="60" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    Text="{x:Bind Time}" />
                                                
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                                    <Image
                                                        Width="20"
                                                        Height="20"
                                                        Source="{x:Bind Icon, Mode=OneWay}"
                                                        Stretch="UniformToFill" />
                                                    <StackPanel Spacing="2">
                                                        <TextBlock FontWeight="Medium" Text="{x:Bind Title}" />
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                            Text="{x:Bind Subtitle}"
                                                            TextTrimming="CharacterEllipsis"
                                                            MaxLines="1" />
                                                    </StackPanel>
                                                </StackPanel>
                                                
                                                <StackPanel
                                                    Grid.Column="2"
                                                    VerticalAlignment="Center"
                                                    Orientation="Horizontal"
                                                    Spacing="8">
                                                    <Border
                                                        Padding="8,4"
                                                        Background="{x:Bind CategoryColor, Converter={StaticResource StringToBrushConverter}}"
                                                        CornerRadius="4">
                                                        <TextBlock
                                                            FontSize="11"
                                                            Foreground="White"
                                                            Text="{x:Bind Category}" />
                                                    </Border>
                                                    <TextBlock FontWeight="SemiBold" Text="{x:Bind Duration}" />
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            <Border
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Visibility="{x:Bind ViewModel.HasData, Converter={StaticResource InverseBooleanToVisibilityConverter}, Mode=OneWay}">
                <StackPanel HorizontalAlignment="Center" Spacing="8">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="16"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="暂无数据" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                        Text="请确保监控服务正在运行" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
