<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="Tai.App.Views.ExportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <ScrollViewer Padding="24">
        <StackPanel Spacing="24">
            <TextBlock
                FontSize="24"
                FontWeight="SemiBold"
                Text="数据导出与同步" />
            
            <Border
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12">
                <StackPanel Spacing="16">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="本地数据导出" />
                    
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button
                            x:Name="ExportButton"
                            Background="{StaticResource PrimaryBrush}"
                            Content="导出到本地"
                            Foreground="White"
                            Click="ExportButton_Click" />
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <Border
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12">
                <StackPanel Spacing="16">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="WebDAV 云同步" />
                    
                    <StackPanel Spacing="8">
                        <TextBlock Text="服务器地址" />
                        <TextBox
                            x:Name="WebDAVUrlBox"
                            PlaceholderText="https://dav.example.com/folder" />
                    </StackPanel>
                    
                    <StackPanel Spacing="8">
                        <TextBlock Text="用户名" />
                        <TextBox
                            x:Name="WebDAVUsernameBox"
                            PlaceholderText="用户名" />
                    </StackPanel>
                    
                    <StackPanel Spacing="8">
                        <TextBlock Text="密码" />
                        <PasswordBox
                            x:Name="WebDAVPasswordBox"
                            PlaceholderText="密码" />
                    </StackPanel>
                    
                    <CheckBox
                        x:Name="WebDAVEnabledBox"
                        Content="启用 WebDAV 同步功能" />
                    
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button
                            x:Name="TestWebDAVButton"
                            Content="测试连接"
                            Click="TestWebDAVButton_Click" />
                        <Button
                            x:Name="SaveConfigButton"
                            Content="保存配置"
                            Click="SaveConfigButton_Click" />
                        <Button
                            x:Name="SyncButton"
                            Background="{StaticResource PrimaryBrush}"
                            Content="备份到云端"
                            Foreground="White"
                            Click="SyncButton_Click" />
                    </StackPanel>
                    
                    <TextBlock
                        x:Name="LastSyncText"
                        FontSize="12"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Border>
            
            <Border
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12">
                <StackPanel Spacing="16">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="云端备份版本恢复" />
                    
                    <StackPanel Spacing="8">
                        <TextBlock
                            FontSize="12"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="浏览并选择云端的备份文件，下载后可直接导入恢复数据" />
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button
                            x:Name="RefreshBackupsButton"
                            Content="刷新备份列表"
                            Click="RefreshBackupsButton_Click" />
                        <Button
                            x:Name="RestoreBackupButton"
                            Background="{StaticResource PrimaryBrush}"
                            Content="恢复选中备份"
                            Foreground="White"
                            Click="RestoreBackupButton_Click" />
                    </StackPanel>
                    
                    <ListView
                        x:Name="BackupFileList"
                        MaxHeight="250"
                        SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <TextBlock
                                        Width="180"
                                        Text="{Binding Name}"
                                        FontWeight="SemiBold" />
                                    <TextBlock
                                        Width="80"
                                        Text="{Binding SizeText}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    <TextBlock
                                        Text="{Binding LastModifiedText}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    
                    <ProgressBar
                        x:Name="DownloadProgressBar"
                        Height="8"
                        Value="0"
                        Maximum="100" />
                    
                    <TextBlock x:Name="DownloadStatusText" Text="" />
                </StackPanel>
            </Border>
            
            <Border
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12">
                <StackPanel Spacing="16">
                    <Grid>
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="操作日志" />
                        <Button
                            HorizontalAlignment="Right"
                            Content="清空"
                            Click="ClearLogsButton_Click" />
                    </Grid>
                    
                    <ListView
                        x:Name="LogList"
                        MaxHeight="150" />
                </StackPanel>
            </Border>
            
            <TextBlock 
                x:Name="StatusText"
                Text=""
                Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                TextWrapping="Wrap" />
        </StackPanel>
    </ScrollViewer>
</Page>
