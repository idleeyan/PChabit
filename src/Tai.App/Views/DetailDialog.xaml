<?xml version="1.0" encoding="UTF-8" ?>
<ContentDialog
    x:Class="Tai.App.Views.DetailDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:Tai.App.ViewModels"
    mc:Ignorable="d"
    DefaultButton="Close"
    PrimaryButtonText="关闭"
    PrimaryButtonStyle="{StaticResource AccentButtonStyle}">
    
    <ContentDialog.Resources>
        <x:Double x:Key="ContentDialogMaxWidth">800</x:Double>
        <x:Double x:Key="ContentDialogMaxHeight">600</x:Double>
    </ContentDialog.Resources>
    
    <StackPanel Spacing="16" MinWidth="500">
        <TextBlock
            FontSize="20"
            FontWeight="SemiBold"
            Text="{x:Bind ViewModel.Title, Mode=OneWay}" />
        
        <TextBlock
            FontSize="14"
            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
            Text="{x:Bind ViewModel.Summary, Mode=OneWay}"
            TextWrapping="Wrap" />
        
        <Border
            Height="1"
            Background="{ThemeResource DividerStrokeColorDefaultBrush}" />
        
        <ScrollViewer MaxHeight="400">
            <StackPanel>
                <ItemsControl ItemsSource="{x:Bind ViewModel.WebItems, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="viewModel:WebDetailItem">
                            <Border
                                Margin="0,0,0,8"
                                Padding="12"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    
                                    <Grid Grid.Row="0" Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border
                                            Grid.Column="0"
                                            Padding="6,2"
                                            VerticalAlignment="Center"
                                            Background="{Binding CategoryColor}"
                                            CornerRadius="4">
                                            <TextBlock
                                                FontSize="11"
                                                Foreground="White"
                                                Text="{Binding Category}" />
                                        </Border>
                                        
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="8,0,0,0"
                                            VerticalAlignment="Center"
                                            FontWeight="SemiBold"
                                            Text="{Binding Title}"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap" />
                                        
                                        <TextBlock
                                            Grid.Column="2"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="{Binding VisitTime}" />
                                    </Grid>
                                    
                                    <Grid Grid.Row="1" Margin="0,0,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock
                                            Grid.Column="0"
                                            FontSize="12"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="域名: " />
                                        
                                        <TextBlock
                                            Grid.Column="1"
                                            FontSize="12"
                                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                            Text="{Binding Domain}"
                                            TextTrimming="CharacterEllipsis" />
                                    </Grid>
                                    
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="4">
                                            <FontIcon
                                                FontSize="12"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Glyph="&#xE823;" />
                                            <TextBlock
                                                FontSize="11"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Text="{Binding Duration}" />
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0" Orientation="Horizontal" Spacing="4">
                                            <FontIcon
                                                FontSize="12"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Glyph="&#xE74C;" />
                                            <TextBlock
                                                FontSize="11"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Text="{Binding ScrollDepth}" />
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="2" Margin="12,0,0,0" Orientation="Horizontal" Spacing="4">
                                            <FontIcon
                                                FontSize="12"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Glyph="&#xE962;" />
                                            <TextBlock
                                                FontSize="11"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Text="{Binding ClickCount}" />
                                        </StackPanel>
                                        
                                        <StackPanel
                                            Grid.Column="3"
                                            Margin="12,0,0,0"
                                            Orientation="Horizontal"
                                            Spacing="4">
                                            <FontIcon
                                                FontSize="12"
                                                Foreground="#107C10"
                                                Glyph="&#xE73E;"
                                                Visibility="{Binding HasInteraction, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <TextBlock
                                                FontSize="11"
                                                Foreground="#107C10"
                                                Text="已交互"
                                                Visibility="{Binding HasInteraction, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <ItemsControl ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="viewModel:DetailItem">
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <Grid.Resources>
                                    <x:Boolean x:Key="TrueValue">True</x:Boolean>
                                    <x:Boolean x:Key="FalseValue">False</x:Boolean>
                                </Grid.Resources>
                                
                                <Border
                                    Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    Height="1"
                                    Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                                    Visibility="{x:Bind IsDivider, Mode=OneWay}" />
                                
                                <StackPanel
                                    Grid.Column="0"
                                    Orientation="Horizontal"
                                    Visibility="{x:Bind IsDivider, Converter={StaticResource InverseBooleanToVisibilityConverter}, Mode=OneWay}">
                                    <Border
                                        Width="8"
                                        Height="8"
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center"
                                        Background="{x:Bind Color, Mode=OneWay}"
                                        CornerRadius="2"
                                        Visibility="{x:Bind Color, Converter={StaticResource NullToVisibilityConverter}, Mode=OneWay}" />
                                    <TextBlock Text="{x:Bind Label}" TextWrapping="Wrap" />
                                </StackPanel>
                                
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="16,0"
                                    FontWeight="SemiBold"
                                    Text="{x:Bind Value}"
                                    Visibility="{x:Bind IsDivider, Converter={StaticResource InverseBooleanToVisibilityConverter}, Mode=OneWay}" />
                                
                                <TextBlock
                                    Grid.Column="2"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="{x:Bind SubValue}"
                                    Visibility="{x:Bind IsDivider, Converter={StaticResource InverseBooleanToVisibilityConverter}, Mode=OneWay}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</ContentDialog>
